<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/depression_background">


    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#454545"
        android:text="Analysis"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#454545"
        android:text="Button"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_round_corner_filled_3"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Add Pair"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_text_size"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonmain1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/rectangle_round_corner_filled_for_home_page_button"
        android:drawableTint="@android:color/white"
        android:drawableTop="@drawable/mental_health1"
        android:padding="25dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonmain2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonmain2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/rectangle_round_corner_filled_for_home_page_button"
        android:drawableTint="@android:color/white"
        android:drawableTop="@drawable/other_test1"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonmain1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonmain1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Mental Health"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonmain2_text"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintRight_toLeftOf="@+id/buttonmain2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonmain1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/buttonmain2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="64dp"
        android:text="Other Tests"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/buttonmain1"
        app:layout_constraintTop_toBottomOf="@+id/buttonmain2"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/buttonImroveYourself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_round_corner_filled_3"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Improve Yourself"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_text_size"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.850" />

</android.support.constraint.ConstraintLayout>